<%- include ../header %>
<script src="javascripts/jquery-ui-timepicker-addon.js"></script>
<script>
$(function() {
//-------------新浪微博转发-------------------
    var name = $("#taskTitle");
    var url = $("#url");
    var comment=$("#comment");
    //var doc = $("#doc");
    var allFields = $([]).add(name).add(url);

    var info = $("#163_addInfo");
    var infobox = $("#infobox");
    $("#doSubmit").click(function() {
        var bValid = true;
        allFields.removeClass("ui-state-error");
        var accountType=getAccount();

        bValid = bValid && checkUrl();
        bValid = bValid && checkTime();
        bValid = bValid && checkRegexp();

//        if (doc.val() <= 100) {
//            updateTips("语料为空.");
//            bValid = bValid && false;
//        }
        if (bValid) {
            var list=getCount();
            var param = {
                task: $("#task").val(),
                taskTitle: name.val(),
                url: url.val(),
                task_type: $("#task_type").val(),
                accountType:accountType,
                schedule: list,
                comment:comment.val(),
                doc: $("#doc").val()

            };
            updateTips2("正在提交，请稍后...");
            $("#duSubmit").hide();
            $.ajax({
                type: 'POST',
                url: "/newsCommentNew",
                data: param,
                dataType: "text",
                success: function(text) {
                    console.info(text);
                    if (text === '1') {
                        updateTips2("添加成功,页面即将调换到列表页。");
                        setTimeout(function() {
                            location.href = "/mytask";
                        }, 1000);
                    } else {
                        updateTips2(text);
                    }
                },
                error: function(XMLHttpRequest, textStatus) {
                    updateTips("添加出错了，请稍后再试。");
                }
            });
        }

    });
    //获取控量参数 str= : : ;(格式)
    function getCount(){
        var str = "";
        var index = $("#val1").val();
        for(var i=0;i<=index;i++){
            if($("#startTime"+i).val()!="" && $("#endTime"+i).val()!="" && $("#sub_count"+i).val()!=""){
                str+= $("#startTime"+i).val()+ ":";
                str+= $("#endTime"+i).val()+ ":";
                str+= $("#sub_count"+i).val()+ ";";
            }
        }
        return str;
    }
    // 加载添加控量
    $("#add").click(
            function() {
                var val1 = $("#val1").val();
                var id = ++val1;
                var html =' <div id="but'+id+'"><p>从<input type="text" id="startTime'+id+'"  placeholder="开始时间" class="text-input datepicker" >  '+
                        ' 至<input type="text" id="endTime'+ id +'"  placeholder="结束时间"  class="text-input datepicker">时间段内,执行'+
                        '<input type="text" placeholder="评论次数" id="sub_count'+id+'" class="text-input">次评论&nbsp;&nbsp;'+
                        '<img alt="取消" src="images/icons/close.png" id="cancel" onclick="toCancel('+id+') ;" ></p></div>';
                $("#count").append(html);
                $("#val1").val(id);
            });

    function updateTips(t) {
        infobox.removeClass("information");
        infobox.addClass("error");
        info.text(t);
        setTimeout(function() {
            infobox.removeClass("error");
            infobox.addClass("information");
        }, 2000);
    }


    //--------------------------
    function updateTips2(t) {
        info.text(t);
    }
  //url 和name 的非空校验
    function checkUrl(){
       // var url = $("#url").val();
        if($("#url").val()==""){
            updateTips("微博地址不能为空");
            return false;
        }
        if($("#taskTitle").val()==""){
            updateTips("任务标题不能为空");
            return false;
        }
        return true;
    }
    //评论数量的校验
    function checkRegexp(){
        var index = $("#val1").val();
        var reg = /^\d+$/;
        for (var i = 0; i <= index; i++) {
            if($("#startTime"+i).val()!="" && $("#endTime"+i).val()!=""){//在开始时间和结束时间都不为空的情况下才进行数量的校验
                var sub_count=$("#sub_count" + i).val();
                if (!reg.test(sub_count)|| (sub_count == '0')){
                    updateTips("请输入有效的数量");
                    return false;
                }else{
                    if( $("#sub_count" + i).val() < 0 || $("#sub_count" + i).val() >= 100 ){
                        updateTips("数量必须在0到100之间");
                        return false;
                    }
                }
            }
        }
        return true;
    }
    //控量输入时间的校验
    function checkTime(){
        var index = $("#val1").val();
        if($("#startTime0").val() >= $("#endTime0").val()){
            updateTips("结束时间必须大于开始时间0");
            return false;
        }
        if(index>=1){
            for(var i=1;i<=index;i++){
                if($("#startTime"+i).val()!="" || $("#endTime"+i).val()!="" || $("#sub_count" + i).val()!="" ){
                    if($("#startTime"+i).val()>=$("#endTime"+i).val()){
                        updateTips("结束时间必须大于开始时间1");
                        return false;
                    }else{
                        for(var j=0;j<=i-1;j++){
                            if($("#startTime"+i).val()< $("#endTime"+j).val()){
                                updateTips("时间段不能重叠且请按时间顺序添加控量");
                                return false;
                            }
                        }
                    }
                }else{
                    return true;
                }
            }
            return true;
        }
      return true;
    }
    //根据输入的地址加载微博信息
    function loadWeiBoInfo(){
        var url = $("#url").val();
        if(strip(url).length > 0){
            $("#urlMessage").html("<img width=\"20px\" height=\"20px\" src='images/icons/minloader.gif'/>");
            $.post("#输入网址的校验（新浪）",{"url" : url},function(data) {//校验微博地址，同时根据微博地址采集该地址下的信息
                if (!data.flag) {
                    $("#urlMessage").html("<img width=\"20px\" height=\"20px\" src='images/icons/right.gif'/>");
                    $("#taskTitle").html("此处拼接采集到的信息");
                }else{
                    $("#urlMessage").html("<img width=\"20px\" height=\"20px\" src='images/icons/delete.gif'/>");
                }

            });
        }
    }
    //格式化日期
    function p(s) {
        return s < 10 ? '0' + s: s;
    }
    $(".datepicker").datetimepicker({dateFormat: "yy-mm-dd"});
    var date = new Date();
    var d = date.getFullYear() + "-" + p((date.getMonth() + 1)) + "-" +p( date.getDate()) + " " +p(date.getHours()) + ":" + p(date.getMinutes());
    $("#startTime0").val(d);
    date.setHours(date.getHours() + 1);
    var d = date.getFullYear() + "-" + p((date.getMonth() + 1)) + "-" +p( date.getDate()) + " " +p(date.getHours()) + ":" + p(date.getMinutes());
    $("#endTime0").val(d);

});
function getAccount(){
        var accountRadio=document.getElementsByName("accountType");
        for(var i=0;i<accountRadio.length;i++) {
            if(accountRadio[i].checked==true){
                var accountValue = accountRadio[i].value;
                break;
            }
        }
    return accountValue;
}

function toCancel(obj){
    var id=obj;
    $("#but"+id).hide();
    $("#startTime"+id).val("");
    $("#endTime"+id).val("");
    $("#sub_count"+id).val("");
}
function sel(){
    var commentChk=document.getElementsByName("select");
        for(var i=0;i<commentChk.length;i++) {
            if(commentChk[i].checked){
                $("#comment").show();
            }else{
                $("#comment").hide();
            }
        }

    //把携带的评论显示出来
}

</script>


